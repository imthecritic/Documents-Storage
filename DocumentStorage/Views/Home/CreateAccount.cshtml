@model DocumentStorage.Models.CreateAccount

@{
    ViewData["Title"] = "Create Account";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<div>
    <h2>Create Account</h2>
    <br />
    @using (Html.BeginForm("CreateAccount", "Home"))
    {
        <div class="form-group">
            @Html.LabelFor(m => m.FirstName, "First Name", htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.TextBoxFor(m => m.FirstName)
            @Html.ValidationMessageFor(u => u.FirstName)
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.LastName, "Last Name", htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.TextBoxFor(m => m.LastName)
            @Html.ValidationMessageFor(u => u.LastName)

        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Email, htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.TextBoxFor(m => m.Email)
            @Html.ValidationMessageFor(u => u.Email)

        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Password, htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.PasswordFor(m => m.Password)
            @Html.ValidationMessageFor(u => u.Password)


        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.PasswordReEnter, "Re-Enter", htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.PasswordFor(m => m.PasswordReEnter)
            @Html.ValidationMessageFor(u => u.PasswordReEnter)
        </div>
        <input input type="submit" value="Save" />
    }
    <br />

    <p>
        If you have an account @Html.ActionLink("login", "Index", "Home") .

    </p>
</div>