@model IEnumerable<DocumentStorage.Models.DB.File>

@{
    ViewData["Title"] = "Dashboard";
}

<div class="table-responsive">
    <table class="table table-striped table-condensed table-hover">
        <tr>
            <th>
                File Name
            </th>
            <th>
                Added On
            </th>
            <th>
                Downloads
            </th>
        </tr>
        <tbody>
 @foreach (var item in Model)
 {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FileName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Created)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Downloads)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.FileID }) |
            @Html.ActionLink("Details", "Details", new { id = item.FileID }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.FileID })
        </td>
    </tr>
 }
        </tbody>
    </table>
</div>