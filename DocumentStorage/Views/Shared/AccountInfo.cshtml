@model DocumentStorage.Models.AccountInfo
<div class="form-group">
        @Html.LabelFor(m => m.FirstName, "First Name", htmlAttributes: new { name = "firstname", @class = "control-label col-md-2" })
        @Html.TextBoxFor(m => m.FirstName)
</div>
<div class="form-group">
            @Html.LabelFor(m => m.LastName, "Last Name", htmlAttributes: new { name = "lastname", @class = "control-label col-md-2" })
            @Html.TextBoxFor(m => m.LastName)
</div>
<div class="form-group">
            @Html.LabelFor(m => m.Email, htmlAttributes: new { name = "email", @class = "control-label col-md-2" })
            @Html.TextBoxFor(m => m.Email)

</div>
        <div class="form-group">
            @Html.LabelFor(m => m.Password, htmlAttributes: new { name = "password", @class = "control-label col-md-2" })
            @Html.PasswordFor(m => m.Password)


        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.PasswordReEnter, "Re-Enter", htmlAttributes: new { name = "reenter", @class = "control-label col-md-2" })
            @Html.PasswordFor(m => m.PasswordReEnter)
        </div>
        @Html.ValidationSummary()
        @Html.AntiForgeryToken()
        <input input type="submit" value="Save" />

<br />

@section Scripts{
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/js/site.js"></script>
}